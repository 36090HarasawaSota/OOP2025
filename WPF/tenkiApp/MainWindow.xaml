<Window x:Class="tenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tenkiApp"
        mc:Ignorable="d"
        Title="TenkiApp" Height="450" Width="800">
    <Grid>

    </Grid>
                </StackPanel>

                <!-- 右上：カレンダー＋スクロール -->
                <Grid Grid.Column="1" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 年月とボタン -->
                    <Grid HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="MonthText"
                                   Grid.Column="0"
                                   FontSize="30"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center" Padding="10,10" Margin="0,0,20,0"/>

                        <Button Content="＜ 前の月" Grid.Column="1" Margin="5,0,10,0"
                                Padding="10,10" FontSize="17" FontWeight="Bold" Click="PrevMonth"/>

                        <Button Content="次の月 ＞" Grid.Column="2"Margin="10,0,0,0"
                                Padding="10,10" FontSize="17" FontWeight="Bold" Click="NextMonth"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- 曜日ヘッダー -->
                            <RowDefinition Height="*"/>
                            <!-- カレンダー本体 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 横スクロール -->
                        </Grid.RowDefinitions>

                        <!-- 曜日ヘッダー -->
                        <UniformGrid Rows="1" Columns="7" Grid.Row="0">
                            <TextBlock Text="日" Foreground="Red" HorizontalAlignment="Center"/>
                            <TextBlock Text="月" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="火" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="水" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="木" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="金" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="土" Foreground="Blue" HorizontalAlignment="Center"/>
                        </UniformGrid>

                        <!-- カレンダー本体 -->
                        <UniformGrid x:Name="CalendarGrid" Rows="6" Columns="7"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     Grid.Row="1"/>

                        <!-- 横スクロール天気 -->
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled"
                                      Margin="0,20,0,0"
                                      Grid.Row="2">
                            <StackPanel x:Name="WeatherPanel" Orientation="Horizontal"/>
                        </ScrollViewer>
                    </Grid>
                </Grid>

                <!-- 下段：ListView -->
                <ListView x:Name="WeatherListView"
                          Grid.ColumnSpan="2"
                          Grid.Row="1"
                          Height="200"
                          Margin="0,10,0,0"
                          HorizontalAlignment="Stretch">

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="時刻" Width="160" DisplayMemberBinding="{Binding Time}"/>
                            <GridViewColumn Header="天気" Width="150" DisplayMemberBinding="{Binding Weather}"/>
                            <GridViewColumn Header="気温" Width="150" DisplayMemberBinding="{Binding Temp}"/>
                            <GridViewColumn Header="風速" Width="150" DisplayMemberBinding="{Binding Wind}"/>
                            <GridViewColumn Header="降水確率" Width="150" DisplayMemberBinding="{Binding Pop}"/>
                            <GridViewColumn Header="降水量" Width="150" DisplayMemberBinding="{Binding Rain}"/>
                        </GridView>
                    </ListView.View>

                </ListView>

            </Grid>
        </Border>
    </Grid>
</Window>
