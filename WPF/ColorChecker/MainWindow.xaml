<Window x:Class="ColorChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="700" Loaded="Window_Loaded">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="colorArea" Margin="10" Background="Black"/>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--ここに書く-->
            <TextBlock  Grid.Column="0" Grid.Row="0" Text="R" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock  Grid.Column="0" Grid.Row="1" Text="G" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock  Grid.Column="0" Grid.Row="2" Text="B" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Slider x:Name="rSlider" Grid.Row="0" Grid.Column="1" Margin="10" VerticalAlignment="Center" Maximum="255" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <Slider x:Name="gSlider" Grid.Row="1" Grid.Column="1" Margin="10" VerticalAlignment="Center" Maximum="255" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <Slider x:Name="bSlider" Grid.Row="2" Grid.Column="1" Margin="10" VerticalAlignment="Center" Maximum="255" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>

            <TextBox x:Name="rvalue" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" FontSize="20" TextAlignment="Center" Text ="{Binding ElementName=rSlider,Path=Value,UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="gvalue" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" FontSize="20" TextAlignment="Center" Text ="{Binding ElementName=gSlider,Path=Value,UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="bvalue" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" FontSize="20" TextAlignment="Center" Text ="{Binding ElementName=bSlider,Path=Value,UpdateSourceTrigger=PropertyChanged}"/>

            <ComboBox Grid.Row="3" Grid.ColumnSpan="3" ItemsSource="{Binding}" SelectedValue="{Binding Color}" Margin="10" Height="24" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="155" SelectionChanged="colorSelectComboBox_SelectionChanged" x:Name="colorSelectComboBox">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="Auto" Margin="5,0" BorderThickness="1" BorderBrush="Black"  >
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding Color}"/>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="{Binding Name}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>


        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <!--ここに書く-->
            <Button x:Name="stockButton" Grid.Row="0" Content="STOCK" HorizontalAlignment="Center" VerticalAlignment="Center" Width="170" Click="stockButton_Click"/>
            <ListBox x:Name="stockList" Grid.Row="1" Grid.Column="2" FontSize="21" SelectionChanged="stockList_SelectionChanged"/>

        </Grid>

    </Grid>



</Window>
