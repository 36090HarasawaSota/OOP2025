<Window x:Class="SampleApplecation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleApplecation"
        mc:Ignorable="d"
        Title="Sampleapplecation" Height="450" Width="350" FontSize="14">

    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Center" Text="項目"/>
        <TextBlock Grid.Column="2" Text="設定値" />
        <Label Grid.Row="1" Content="ON/OFF(_O)" Target="{Binding ElementName=chackBox,Mode=OneWay}"/>
        <CheckBox x:Name="chackBox" Grid.Row="1" Grid.Column="1" Content="チェックしたらON" Unchecked="chackBox_Unchecked" Checked="chackBox_Checked"
                  VerticalAlignment="Center"/>
        <TextBlock  x:Name="checkBoxTextBlock" Grid.Row="1" Grid.Column="2"
                    VerticalAlignment="Center"/>
        <Label Grid.Row="2" Content="色(_C)" Target="{Binding ElementName=redRedioButton,Mode=OneWay}"/>
        
        <StackPanel Grid.Row="2" Grid.Column="1">
            <RadioButton x:Name="redRedioButton" GroupName="Color" Content="赤" Checked="colorRedioButton_Checked"/>
            <RadioButton x:Name="yelloRedioButton" GroupName="Color" Content="黄" Checked="colorRedioButton_Checked"/>
            <RadioButton x:Name="blueRedioButton" GroupName="Color" Content="青" Checked="colorRedioButton_Checked"/>
        </StackPanel>

        <TextBlock x:Name="colorText" Grid.Column="2" Grid.Row="2"/>
        <Label Grid.Row="3" Content="季節(_S)" Target="{Binding ElementName=seasonComboBox,Mode=OneWay}"/>
        <ComboBox x:Name="seasonComboBox" Grid.Row="3" Grid.Column="1" SelectionChanged="seasonComboBox_SelectionChanged">
            <ComboBoxItem Content="春"/>
            <ComboBoxItem Content="夏"/>
            <ComboBoxItem Content="秋"/>
            <ComboBoxItem Content="冬"/>
        </ComboBox>
        <TextBlock x:Name="seasonTextBlock" Grid.Row="3" Grid.Column="2"/>


    </Grid>
    

</Window>
