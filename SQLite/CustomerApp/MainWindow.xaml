<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="450" Width="800">
    <Window.Resources>
        <local:ByteToImageConverter x:Key="ByteToImageConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" FontSize ="20" Margin="0,15,5,0" TextChanged="TextBox_TextChanged"/>
            <TextBox x:Name="PhoneTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" FontSize ="20" Margin="0,15,5,0" TextChanged="TextBox_TextChanged"/>
            <TextBox x:Name="AddressTextBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" FontSize ="20" Margin="0,15,5,0" TextChanged="TextBox_TextChanged"/>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="名前" FontSize ="25" 
                       HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="電話番号" FontSize ="25" 
                        HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="住所" FontSize ="25" 
                        HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Center"/>


            <Button Grid.Row="3" Grid.Column="0" x:Name="UpdateButton" Content="更新" Margin="10,5,10,0"  
                    FontSize ="25"  IsEnabled="False" Click="UpdateButton_Click"/>
            <Button Grid.Row="3" Grid.Column="1" x:Name="SaveButton" Content="登録" Margin="10,5,10,0"  
                    FontSize ="25"  IsEnabled="False" Click="SaveButton_Click" />
            <Button Grid.Row="3" Grid.Column="2" x:Name="DeleteButton" Content="削除" Margin="10,5,10,0" 
                    FontSize ="25"  IsEnabled="False" Click="DeleteButton_Click"/>

            <Button Grid.Row="4" Grid.Column="0" x:Name="PictureButton" Content="画像"
                    FontSize ="25" Margin="10,15" Click="PictureButton_Click"/>

            <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Margin="10,10">
                <Image x:Name="SelectedImage" Stretch="Fill" Margin="0"/>
            </Border>




        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" x:Name="SearchTextBox" Margin="0,15,0,0" FontSize="20" TextChanged="SearchTextBox_TextChanged"/>
            <ListView Grid.Row="1" x:Name="PersonListView" Margin="0,5,0,0" Height="600" SelectionChanged="PersonListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{Binding Picture, Converter={StaticResource ByteToImageConverter}}"
                                   Width="50" Height="60" Margin="5" Stretch="UniformToFill"/>

                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontSize="20"/>
                                <TextBlock Text="{Binding Phone}" Foreground="Blue"/>
                                <TextBlock Text="{Binding Address}" Foreground="Gray"/>
                            </StackPanel>
                            
                        </StackPanel>
                        
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </Grid>

    </Grid>
    
</Window>

